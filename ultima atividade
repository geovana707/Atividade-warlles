a) 
programa {
  funcao inicio() {
    // Retângulo 10 por 7
    escreva(" **********\n")
    escreva(" *         *\n")
    escreva(" *         *\n")
    escreva(" *         *\n")
    escreva(" *         *\n")
    escreva(" *         *\n")
    escreva(" *         *\n")
    escreva(" **********\n\n")

    // Retângulo 7 por 5
    escreva("   ***** \n")
    escreva(" *       *\n")
    escreva(" *       *\n")
    escreva(" *       *\n")
    escreva(" *       *\n")
    escreva(" *       *\n")
    escreva("   ***** \n\n")

    // Figura tipo flecha (9 por 7)
    escreva("      *    \n")
    escreva("     ***   \n")
    escreva("    *****  \n")
    escreva("   ******* \n")
    escreva("  *********\n")
    escreva("      *     \n")
    escreva("      *     \n\n")

    // Losango
    escreva("-------------\n")
    escreva("       *     \n")
    escreva("      * *    \n")
    escreva("     *   *   \n")
    escreva("    *     *  \n")
    escreva("     *   *   \n")
    escreva("      * *    \n")
    escreva("       *     \n")
  }
}

