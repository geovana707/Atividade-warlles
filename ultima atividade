programa
{
    funcao inicio()
    {
        // Declaração de variáveis
        cadeia nome, sobrenome

        // Entrada de dados
        escreva("informe o nome: ")
        leia(nome)
        escreva("informe o sobrenome: ")
        leia(sobrenome)

        // Saída nos dois formatos
        escreva("brasileiro: ", nome, " ", sobrenome, "/ ","invertido: ", sobrenome, " ", nome,"." )
       
    }
}

c)
programa {
  funcao inicio() {
    //Declaração de variavel
      inteiro nu1, nu2 , soma, sub, multi, divi, resto

    //Entrada de Dados
      escreva("escreva o primeiro numero: ")
      leia(nu1)
      escreva("escreva o segundo numero: ")
      leia(nu2)

    //processamento
    soma = nu1 + nu2
    sub = nu1 - nu2
    multi = nu1 * nu2
    divi = nu1 / nu2
    resto = nu1 % nu2

    //Saida de dados
      escreva("A soma é: ", soma, ", A subtração é: ", sub, ", A multiplicação é: ", multi, ", o quociente é: ", divi, ", e o resto é: ", resto,".")
  }
}

d)
 programa {
  funcao inicio() {
    //Declaração de variavel 
    real celsius, farenheit 

    //Entrada de Dados 
    escreva("Informe a temperatura em celsius: ")
    leia(celsius)

    //Processamento
    farenheit = (9 * celsius + 160) / 5

    //saida de Dados 
    escreva("A temperatura em farenheit é: ", farenheit," graus.")
  }
}

e)
programa {
  funcao inicio() {
    //Declaração de variavel 
    real celsius , farenheit 

    //Entrada de Dados 
    escreva("informe a temperatura em farenheit ")
    leia(farenheit)
    //Processamento
    celsius =((farenheit - 32) * 5) / 9
    //saida de Dados 
    escreva("temeperatura em celsius: ", celsius," graus.")
  }
}

f)
programa {
  funcao inicio() {
    //Declaração de variavel 
    real raio, volume, altura

    //Declaração de constante
     real pi = 3.14159
    
    //Entrada de Dados 
    escreva("Informe o valor do raio: ")
    leia(raio)
    escreva("Informe o valor da altura: ")
    leia(altura)

    //Processamento
    volume = raio * pi * altura

    //saida de Dados 
    escreva("O valor do volume interno é: ", volume,"." )
  }
}

