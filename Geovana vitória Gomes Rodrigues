03 - 
programa {
  funcao inicio() {
    //Declaração de variáveis
      real not1,not2,not3,not4,media

      //Entrada de dados
      escreva("Informe a primeira nota: ")
      leia(not1)
      escreva("Informe a segunda nota: ")
      leia(not2)
      escreva("Informe a terceira nota: ")
      leia(not3)
      escreva("Informe a quarta nota: ")
      leia(not4)

      //Processamento
      media= not1+ not2+ not3 + not4/4

      //Saída de dados 
      escreva("A media aritmetica do aluno é: ", media)
  
 }
}

04 - 
programa {
  funcao inicio() {
    //Declaração de variáveis 
    real janeiro,fevereiro,marco,media

    //Entrada de dados
    escreva("Informe o valor gasto em janeiro: ")
    leia (janeiro)
    escreva("Informe o valor gasto em fevereiro: ")
    leia(fevereiro)
    escreva("Informe o valor gasto em março: ")
    leia(marco)
    //Processamento 
    media = janeiro+fevereiro+marco/3

    //Saída de dados 
    escreva("A média aritmética é: ", media)
  }
}

05 - 
programa {
  funcao inicio() {
    //Declaração de variáveis
    real altura,peso
    
    //Declaração de constante
     real k=72.7
     inteiro b=58

    //Entrada de dados 
    escreva("Informe a altura: ")
    leia(altura)

    //Processamento
    peso= k*altura-b

    //Saída de dados
    escreva("O seu peso ideal é: ", peso, "kg")
  }
}

06 -
programa {
  funcao inicio() {
//Declaração de variavel
    real x, y, troca

    //Entrada de dados 
    escreva("Informe o primeiro valor: ")
    leia(x)
    escreva("Informe o segundo valor: ")
    leia(y)

    //Processamento 
    troca = x 
    x = y 
    y = troca

    // Saida de dados
    escreva("O valor x: ", x ,  " e valor y: ", y,","," trocados são: ",y,"  e ",x, " respectivamente.")
 }
}

07-
programa {
  funcao inicio() {
//Declaração de variável
    real raio, diametro, comprimento, area

    //Entrada de Dados
    escreva("Informe o valor do raio: ")
    leia(raio)

    //Processamento
    diametro = raio * 2
    comprimento = 3.14 * diametro
    area = (raio * raio) * 3.14

    //Saida de Dados
    escreva("Com o raio ", raio,",", " o diametro será: " , diametro,",", " comprimento será: ", comprimento, " e área será: ", area)
  }
}

08 -
programa {
  funcao inicio() {
    // declaraçao de variaveis
    real celcius, fahrenheit, temperatura

    //entrada de dados
    escreva("informe a temperatura em celsius: ")
    leia(celcius)

    //processamento
    fahrenheit = celcius * 9/5 + 32

    //saida de dados
    escreva(" a temperatura em fahrenhat é: ", fahrenheit,".")

  }
}

09-
programa {
  funcao inicio() {
    //Declaração de variavel
    inteiro normal, centena, dezena, unidade,invertido 

    //Entrada de Dados 
    escreva("Informe o valor da unidade: ")
    leia(unidade)
    escreva("informe o valor da dezena: ")
    leia(dezena)
     escreva("informe o valor da centena: ")
    leia(centena)

    //saida de dados
    escreva("o numero normal é: ",unidade,dezena,centena," e ","O número ao contrário é: ", centena,dezena,unidade,".")
  }
}

10
programa {
  funcao inicio() {
    //Declaração de variavel
     real g1, g2, g3

     //Declaração de constante
     inteiro valor_total = 780.000

    //Entrada de Dados

    //processamento
     g1 = valor_total * 0.46
     g2 = valor_total * 0.32
     g3 = valor_total * 0.22

     //saida dos dados
     escreva("O premio para o primeiro colocado será: ", g1," reais, " ,"para o segundo será: ", g2," reais", " e para o terceiro: ", g3," reais.")
  }
}
