03 - 
programa {
  funcao inicio() {
    //Declaração de variáveis
      real not1,not2,not3,not4,media

      //Entrada de dados
      escreva("Informe a primeira nota")
      leia(not1)
      escreva("Informe a segunda nota")
      leia(not2)
      escreva("Informe a terceira nota")
      leia(not3)
      escreva("Informe a quarta nota")
      leia(not4)

      //Processamento
      media= not1+ not2+ not3 + not4/4

      //Saída de dados 
      escreva("A media aritmetica do aluno é", media)
  
 }
}

04 - 
programa {
  funcao inicio() {
    //Declaração de variáveis 
    real janeiro,fevereiro,marco,media

    //Entrada de dados
    escreva("Informe o valor gasto em janeiro")
    leia (janeiro)
    escreva("Informe o valor gasto em fevereiro")
    leia(fevereiro)
    escreva("Informe o valor gasto em março")
    leia(marco)
    //Processamento 
    media = janeiro+fevereiro+marco/3

    //Saída de dados 
    escreva("A média aritmética é", media)
  }
}

05 - 
programa {
  funcao inicio() {
    //Declaração de variáveis
    real altura,peso
    
    //Declaração de constante
    const real k=72.7
    const  inteiro b=58

    //Entrada de dados 
    escreva("Informe a altura")
    leia(altura)

    //Processamento
    peso= k*altura-b

    //Saída de dados
    escreva("O seu peso ideal é", peso)
 


  }
}
06 -
//Declaração de variavel
    real x, y, troca

    //Entrada de dados 
    escreva("Informe o primeiro valor: ")
    leia(x)
    escreva("Informe o segundo valor: ")
    leia(y)

    //Processamento 
    troca = x 
    x = y 
    y = troca

    // Saida de dados
    escreva("O valor x ", x , " O valor y ", y,"trocado é: ",x,y)
 }
}

07-
//Declaração de variável
    real raio, diametro, comprimento, area

    //Entrada de Dados
    escreva("Informe o valor do raio: ")
    leia(raio)

    //Processamento
    diametro = raio * 2
    comprimento = 3.14 * diametro
    area = (raio * raio) * 3.14

    //Saida de Dados
    escreva("Com o raio ", raio , " o diametro é: " , diametro, " o comprimento sera: ", comprimento, " e área será: ", area)
08 -
programa {
  funcao inicio() {
    // declaraçao de variaveis
    real celcius, fahrenheit, temperatura

    //entrada de dados
    escreva("informe a temperatura em celsius: ")
    leia(celcius)

    //processamento
    fahrenheit = celcius * 9/5 + 32

    //saida de dados
    escreva(" a temperatura em fahrenhat é: ", fahrenheit)

  }
}

09-
programa {
  funcao inicio() {
    //Declaração de variavel
    inteiro n, centena, dezena, unidade, cont 

    //Entrada de Dados 
    escreva("Informe um número com três digitos: ")
    leia(n)

    //processamento
    centena = n / 100
    cont = n % 100
    dezena = cont / 10
    cont = cont % 10
    unidade = cont
    escreva("O número ao contrário é: ", unidade, dezena, centena)
  }
}

10
programa {
  funcao inicio() {
    //Declaração de variavel
     real g1, g2, g3

     //Declaração de constante
     const inteiro valortotal = 780.000

    //Entrada de Dados

    //processamento
     g1 = valortotal * 0.46
     g2 = valortotal * 0.32
     g3 = valortotal * 0.22

     //saida dos dados
     escreva("O premio para o primeiro ganhador sera ", g1 ,"O segundo será ", g2 , "o terceiro ", g3)
  }
}
